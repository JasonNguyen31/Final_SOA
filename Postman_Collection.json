              "host": ["{{baseUrl}}"],
              "port": "8002",
              "path": ["api", "users", "notifications"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"}
              ]
            }
          }
        }
      ]
    }
  ]
}
